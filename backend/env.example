# Face Recognition Dashboard - Backend Environment Variables
# Copy this file to backend/.env and replace the placeholder values before running in production.
# Formatting rules: use KEY=value with no surrounding quotes or spaces.

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=face_recognition_db

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# CORS Configuration - include production frontend and any dev origins
ALLOWED_ORIGINS=https://eye-dentify.vercel.app,http://localhost:3000,http://localhost:5000,http://localhost:5173

# Face Recognition Thresholds
RECOGNITION_THRESHOLD=0.50
REJECTION_THRESHOLD=0.30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Authentication / Secrets
SECRET_KEY=your_secret_key_here
REGISTRATION_SECRET_KEY=your_registration_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=your_from_email@yourdomain.com
RESEND_TEST_EMAIL=your_test_email@example.com
RESEND_PRODUCTION=false

# MojoAuth Configuration
MOJOAUTH_API_KEY=your_mojoauth_api_key_here
MOJOAUTH_API_SECRET=your_mojoauth_api_secret_here
MOJOAUTH_BASE_URL=https://your-app-id.auth.mojoauth.com
MOJOAUTH_REDIRECT_URL=https://your-frontend-domain.com/register/verify-otp
MOJOAUTH_ENV=test